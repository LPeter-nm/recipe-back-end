generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  FACIL
  MEDIO
  DIFICIL
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  token    String   @unique
  recipe   Recipe[]
}

model Recipe {
  id               String     @id @default(uuid())
  title            String
  description      String
  ingredients      String
  preparation_time Int        @map("preparationTime")
  difficulty       Difficulty @default(FACIL)
  category         String
  imagem_url       String
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
}
